[user]
	email = macksol@gmail.com
	name = Mack Solomon
[push]
        autoSetupRemote = true
[alias]
        # add
        a = add
        ap = add -p
        c = commit --verbose
        ca = commit -a --verbose
        cm = commit -m
        cam = commit -a -m
        m = commit --amend --verbose
        cmd = "!f() { git add . && git commit -m \"change\"; }; f"

        # diff
        d = diff
        ds = diff --stat
        dc = diff --cached

        s = status -s
        co = checkout
        cob = checkout -b

        b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"

        la = "!git config -l | grep alias | cut -c 7-"
[filter "lfs"]
        clean = git-lfs clean -- %f
        smudge = git-lfs smudge -- %f
        process = git-lfs filter-process
        required = true
[credential]
	helper = osxkeychain
[mergetool]
	prompt = false
